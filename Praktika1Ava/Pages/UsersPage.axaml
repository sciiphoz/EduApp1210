<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Praktika1Ava.UsersPage">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>

		<DataGrid Name="MainDataGrid" IsReadOnly="True"  
				HorizontalAlignment="Center" VerticalAlignment="Center"
				DoubleTapped="DataGrid_DoubleTapped"
				Grid.Row="0"
				AutoGenerateColumns="True"
				GridLinesVisibility="All">
		</DataGrid>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button x:Name="btnAdd" Width="75" HorizontalContentAlignment="Center" Margin="25 0 25 0" Click="btnAdd_Click" Content="Add"></Button>
			<Button x:Name="btnDelete" Width="75" HorizontalContentAlignment="Center" Margin="25 0 0 0" Click="btnDelete_Click" Content="Delete"></Button>		
		</StackPanel>
	</Grid>
</UserControl>
