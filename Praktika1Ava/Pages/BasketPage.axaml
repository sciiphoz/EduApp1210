<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Praktika1Ava.BasketPage">
   	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>

		<DataGrid Name="MainDataGrid" IsReadOnly="True"  
				HorizontalAlignment="Center" VerticalAlignment="Center"
				DoubleTapped="DataGrid_DoubleTapped"
				Grid.Row="0"
				GridLinesVisibility="All">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Id" Binding="{Binding Id}"></DataGridTextColumn>
				<DataGridTextColumn Header="User" Binding="{Binding User.Name}"></DataGridTextColumn>
				<DataGridTextColumn Header="Item" Binding="{Binding Item.Name}"></DataGridTextColumn>
				<DataGridTextColumn Header="Price per piece" Binding="{Binding Item.Price}"></DataGridTextColumn>
				<DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"></DataGridTextColumn>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
			<TextBlock>Full price:   </TextBlock>
			<TextBlock x:Name="FullPrice"></TextBlock>
		</StackPanel>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button x:Name="btnDelete" Width="75" HorizontalContentAlignment="Center" Click="btnDelete_Click" Content="Delete"></Button>		
		</StackPanel>
	</Grid>
</UserControl>
