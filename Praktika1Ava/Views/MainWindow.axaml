<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Praktika1Ava.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Praktika1Ava">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="5*"></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
			<Button x:Name="btnAuth" Width="150" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0 0 25 0" Click="btnAuth_Click" Content="Authorize"></Button>
			<Button x:Name="btnReg" Width="150" Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="25 0 25 0" Click="btnReg_Click" Content="Register"></Button>
		</StackPanel>

		<ContentControl x:Name="MainContentControl" Grid.Row="1">
			
		</ContentControl>
	</Grid>
</Window>

        