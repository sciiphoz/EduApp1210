<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Praktika1Ava.NavigationWindow"
        Title="NavigationWindow">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="5*"></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
			<Button x:Name="btnUsers" Width="75" HorizontalContentAlignment="Center" Margin="0 0 25 0" Click="btnUsers_Click" Content="Users"></Button>
			<Button x:Name="btnItems" Width="75" HorizontalContentAlignment="Center" Margin="25 0 25 0" Click="btnItems_Click" Content="Items"></Button>

		</StackPanel>

		<ContentControl x:Name="MainContentControl" Grid.Row="1">

		</ContentControl>
	</Grid>
</Window>
